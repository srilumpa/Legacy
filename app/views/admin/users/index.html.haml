- content_for :toolbar do
  .navbar-header
    %button.navbar-toggle{type: 'button', data: {toggle: 'collapse', target: '#toolbar-navbar-collapse'}}
      .sr-only Toggle navigation
      .icon-bar
      .icon-bar
      .icon-bar
    %a.navbar-brand{href: '#'}= fa_icon 'group', text: 'Users'
  #toolbar-navbar-collapse.collapse.navbar-collapse
    %form.navbar-form.navbar-lefts
      .btn-group
        %button.btn.btn-default.dropdown-toggle{'data-toggle' => 'dropdown', 'aria-expanded' => false}= fa_icon('caret-down', text: 'Locked')
        %ul.dropdown-menu{role: 'menu'}
          %li= link_to fa_icon((params[:locked] == nil ? 'check-square-o' : 'square-o'), text: 'All'), @selected_options.merge({locked: nil})
          %li= link_to fa_icon((params[:locked] == 'true' ? 'check-square-o' : 'square-o'), text: 'Locked'), @selected_options.merge({locked: true})
          %li= link_to fa_icon((params[:locked] == 'false' ? 'check-square-o' : 'square-o'), text: 'Unlocked'), @selected_options.merge({locked: false})
      .btn-group
        %button.btn.btn-default.dropdown-toggle{'data-toggle' => 'dropdown', 'aria-expanded' => false}= fa_icon('caret-down', text: 'Status')
        %ul.dropdown-menu{role: 'menu'}
          %li= link_to fa_icon(((params[:admin] == nil && params[:valid_user] == nil) ? 'check-square-o' : 'square-o'), text: 'All'), @selected_options.merge({admin: nil, valid_user: nil})
          %li= link_to fa_icon((params[:admin] == 'true' ? 'check-square-o' : 'square-o'), text: 'Admin'), @selected_options.merge({admin: true})
          %li= link_to fa_icon((params[:valid_user] == 'true' ? 'check-square-o' : 'square-o'), text: 'User'), @selected_options.merge({valid_user: true})
          %li= link_to fa_icon((params[:valid_user] == 'false' ? 'check-square-o' : 'square-o'), text: 'Guest'), @selected_options.merge({valid_user: false})

= render 'collection', collection: @users
